extends layout-new

block content
  .wrapper
    // top navbar
    header.topnavbar-wrapper
      // START Top Navbar
      nav.navbar.topnavbar(role='navigation')
        // START navbar header
        .navbar-header
          a.navbar-brand(href='#/')
            .brand-logo
              img.img-responsive(src='/images/logo.png', alt='App Logo')
            .brand-logo-collapsed
              img.img-responsive(src='/images/logo-single.png', alt='App Logo')
        // END navbar header
        // START Nav wrapper
        .nav-wrapper
          // START Left navbar
          ul.nav.navbar-nav
            li
              // Button used to collapse the left sidebar. Only visible on tablet and desktops
              a.hidden-xs(href='#', data-toggle-state='aside-collapsed')
                em.fa.fa-navicon
              // Button to show/hide the sidebar on mobile. Visible on mobile only.
              a.visible-xs.sidebar-toggle(href='#', data-toggle-state='aside-toggled', data-no-persist='true')
                em.fa.fa-navicon
          // END Left navbar
          // START Right Navbar
          ul.nav.navbar-nav.navbar-right
            // Search icon
            li
              a(href='#', data-search-open='')
                em.icon-magnifier
            // START Offsidebar button
            li
              a(href='#', data-toggle-state='offsidebar-open', data-no-persist='true')
                em.icon-notebook
            // END Offsidebar menu
          // END Right Navbar
        // END Nav wrapper
        // START Search form
        form.navbar-form(role='search', action='search.html')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Type and hit enter ...')
            .fa.fa-times.form-control-feedback(data-search-dismiss='')
          button.hidden.btn.btn-default(type='submit') Submit
        // END Search form
      // END Top Navbar
    // sidebar
    include ./partials/sidebar.jade
    // offsidebar
    aside.offsidebar.hide
      // START Off Sidebar (right)
      nav
        div(role='tabpanel')
          // Nav tabs
          ul.nav.nav-tabs.nav-justified(role='tablist')
            li.active(role='presentation')
              a(href='#app-settings', aria-controls='app-settings', role='tab', data-toggle='tab')
                em.icon-equalizer.fa-lg
            li(role='presentation')
              a(href='#app-chat', aria-controls='app-chat', role='tab', data-toggle='tab')
                em.icon-user.fa-lg
          // Tab panes
          .tab-content
            #app-settings.tab-pane.fade.in.active(role='tabpanel')
              h3.text-center.text-thin Tab 1
            #app-chat.tab-pane.fade(role='tabpanel')
              h3.text-center.text-thin Tab 2
      // END Off Sidebar (right)
    // Main section
    section
      // Page content
      .content-wrapper
        .content-heading
          // START Language list
          .pull-right
            .btn-group
              button.btn.btn-default(type='button', data-toggle='dropdown') English
              ul.dropdown-menu.dropdown-menu-right.animated.fadeInUpShort(role='menu')
                li
                  a(href='#', data-set-lang='en') English
                li
                  a(href='#', data-set-lang='es') Spanish
          // END Language list
          | Single View
          small(data-localize='dashboard.WELCOME')
        .row
          .col-xs-12.text-center
            h2.text-thin Single view content
            p
              | This project is an application skeleton. You can use it to quickly bootstrap your jQuery webapp projects and dev environment for these projects.
              br
              | The seed app doesn't do much and has most of the feature removed so you can add theme as per your needs just following the demo app examples.
    // Page footer
    footer
      span Â© 2016 - Angle
